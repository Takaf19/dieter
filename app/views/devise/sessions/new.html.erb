<div class="sign-header">
  <h2>Log in</h2>
</div>

<div class="sign-main">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="signin-form">

      <div class="signin-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "sign-box" %>
      </div>

      <div class="signin-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "sign-box" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="signin-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "check-box" %>
        </div>
      <% end %>

      <div class="signin-actions">
        <%= f.submit "Log in", class: "sign-suvmit" %>
      </div>
    </div>
  <% end %>
</div>
